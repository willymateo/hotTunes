{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "plugin:react/jsx-runtime", "google", "prettier"],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    //Require declaration of prop-types in components.
    "react/prop-types": "off",
    //Require js doc to any component.
    "require-jsdoc": "off",
    //Semicolon at end of line.
    "semi": ["error", "always"],
    //Double quotes.
    "quotes": [
      "warn",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    //Unused vars
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "all"
      }
    ]
  }
}
